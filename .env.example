# AI Research Framework Environment Configuration

# Application Settings
APP_NAME="AI Research Framework"
APP_VERSION="0.1.0"
DEBUG=false
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/research_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=

# ChromaDB Configuration
CHROMADB_HOST=localhost
CHROMADB_PORT=8001
CHROMADB_COLLECTION_NAME=research_documents

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OCR Configuration
TESSERACT_CMD=/usr/bin/tesseract
OCR_CONFIDENCE_THRESHOLD=80.0
OCR_LANGUAGES=["eng", "hin", "san"]

# Document Processing
MAX_FILE_SIZE=104857600  # 100MB in bytes
SUPPORTED_FORMATS=["pdf", "docx", "txt", "jpg", "png", "tiff"]
PROCESSING_TIMEOUT=300

# Web Scraping
SCRAPING_DELAY=1.0
SCRAPING_TIMEOUT=30
SCRAPING_RETRIES=3
USER_AGENT="AI Research Framework/0.1.0 (Educational Research)"

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Security
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Storage Paths
STORAGE_PATH=./data
BACKUP_PATH=./backups
TEMP_PATH=./temp

# Research Configuration
MAX_SOURCES_PER_QUERY=50
DEFAULT_TIME_RANGE_YEARS=100
CREDIBILITY_THRESHOLD=0.6

# Language Processing
DEFAULT_LANGUAGE=english
SUPPORTED_LANGUAGES=["english", "hindi", "sanskrit", "tamil"]

